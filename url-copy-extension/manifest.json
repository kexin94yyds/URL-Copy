{
  "manifest_version": 3,
  "name": "URL Copy",
  "version": "1.0",
  "description": "按快捷键复制当前网页链接到剪贴板",
  "permissions": [
    "activeTab",
    "scripting",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "copy-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      },
      "description": "复制当前页面URL"
    }
  },
  "action": {
    "default_title": "URL Copy",
    "default_icon": {
      "16": "icon16.svg",
      "48": "icon48.svg",
      "128": "icon128.svg"
    }
  },
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  }
}